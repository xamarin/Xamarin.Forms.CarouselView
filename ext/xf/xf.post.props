<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="12.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <!--pack-->
  <PropertyGroup Condition="'$(TargetProject)' == '$(PackProjectId)'">
    <TargetsFile>$(ExtPackDir)pack.targets</TargetsFile>
  </PropertyGroup>

  <!--android-->
  <PropertyGroup Condition="'$(TargetProject)' == '$(AndroidProjectId)'">
    <TargetsFile>$(MSBuildExtensionsPath)\Xamarin\Android\Xamarin.Android.CSharp.targets</TargetsFile>
  </PropertyGroup>

  <!--ios unified-->
  <PropertyGroup Condition="'$(TargetProject)' == '$(IosUnifiedProjectId)'">
    <TargetsFile>$(MSBuildExtensionsPath)\Xamarin\iOS\Xamarin.iOS.CSharp.targets</TargetsFile>
  </PropertyGroup>

  <!--ios classic-->
  <PropertyGroup Condition="'$(TargetProject)' == '$(IosClassicProjectId)'">
    <TargetsFile>$(MSBuildExtensionsPath)\Xamarin\iOS\Xamarin.MonoTouch.CSharp.targets</TargetsFile>
  </PropertyGroup>

  <!--windows universal-->
  <PropertyGroup Condition="'$(TargetProject)' == '$(WindowsUniversalProjectId)'">
    <TargetsFile>$(MSBuildExtensionsPath)\Microsoft\WindowsXaml\v$(VisualStudioVersion)\Microsoft.Windows.UI.Xaml.CSharp.targets</TargetsFile>
  </PropertyGroup>

  <!--windows phone-->
  <PropertyGroup Condition="'$(TargetProject)' == '$(WindowsPhoneProjectId)'">
    <TargetsFile>$(MSBuildExtensionsPath)\Microsoft\WindowsXaml\v$(VisualStudioVersion)\Microsoft.Windows.UI.Xaml.CSharp.targets</TargetsFile>
  </PropertyGroup>

  <!--windows tablet-->
  <PropertyGroup Condition="'$(TargetProject)' == '$(WindowsTabletProjectId)'">
    <TargetsFile>$(MSBuildExtensionsPath)\Microsoft\WindowsXaml\v$(VisualStudioVersion)\Microsoft.Windows.UI.Xaml.CSharp.targets</TargetsFile>
  </PropertyGroup>
  
</Project>