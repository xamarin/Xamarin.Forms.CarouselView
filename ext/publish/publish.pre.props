<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="12.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <ExtPublishDir>$(MSBuildThisFileDirectory)</ExtPublishDir>
    <PublishProj>$(ExtPublishDir)publish.proj</PublishProj>
  </PropertyGroup>
  
  <!--build drop paths-->
  <PropertyGroup>
    <DropDir>$(RootDir)drp\</DropDir>
    <BuildByNumberDir>$(DropDir)number\</BuildByNumberDir>
    <BuildByNumberDefaultDir>$(BuildByNumberDir)10000\</BuildByNumberDefaultDir>
    <BuildByRevisionDir>$(DropDir)revision\</BuildByRevisionDir>
    <BuildByVersionDir>$(DropDir)version\</BuildByVersionDir>
  </PropertyGroup>

</Project>