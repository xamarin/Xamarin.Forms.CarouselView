<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="12.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <BuildDependsOn>
      RefreshTemplateExpansions;
      $(BuildDependsOn)
    </BuildDependsOn>
  </PropertyGroup>
  
  <!--RefreshTemplateExpansions-->
  <Target
    Name="RefreshTemplateExpansions"
    Outputs="%(Template.Identity)"
    Condition="'@(Template)'!=''"
  >
    <!--get path to tempalte-->
    <PropertyGroup>
      <TemplateIdentity>%(Template.Identity)</TemplateIdentity>
      <TemplatePath>$([System.IO.Path]::GetFullPath('%(Template.Identity)'))</TemplatePath>
      <TemplateText>$([System.IO.File]::ReadAllText($(TemplatePath)))</TemplateText>
    </PropertyGroup>

    <!--get path to expansion-->
    <PropertyGroup>
      <DefaultExpansionPath>$(TemplatePath.Replace('.t',''))</DefaultExpansionPath>
      <ExpansionIdentity>@(Compile->WithMetadataValue('FullPath', '$(DefaultExpansionPath)')->'%(Identity)')</ExpansionIdentity>
      <ExpansionText>$([System.IO.File]::ReadAllText($(ExpansionIdentity)))</ExpansionText>
      <ExpansionFileName>$([System.IO.Path]::GetFileName($(DefaultExpansionPath)))</ExpansionFileName>
      <FreshExpansionPath>$(IntermediateOutputPathAbsolute)$(ExpansionFileName)</FreshExpansionPath>
    </PropertyGroup>

    <!--find variables of form: $(Name)-->
    <RegexMatches
      Input="$(TemplateText)"
      Pattern="(?&lt;=[$][(]).*?(?=[)])"
    >
      <Output ItemName="Match" TaskParameter="Matches" />
    </RegexMatches>

    <!--load replacement values-->
    <ItemGroup>
      <Pattern Include="@(Match->'[$(Ds)][(]%(Identity)[)]')">
        <Name>%(Identity)</Name>
        <Replacement>$(%(Identity))</Replacement>
      </Pattern>
    </ItemGroup>

    <!--replace variables with values-->
    <RegexReplace
      Input="$(TemplateText)"
      Pattern="@(Pattern)"
    >
      <Output PropertyName="FreshExpansionText" TaskParameter="Result" />
    </RegexReplace>

    <!--write fresh expansion-->
    <MakeDir Directories="$(IntermediateOutputPathAbsolute)" />
    <WriteTextToFile
      File="$(FreshExpansionPath)"
      Text="$(FreshExpansionText)"
      Overwrite="true"
    />
    
    <!--log substitution-->
    <Message Text="  TemplatePath: $(TemplatePath)" Importance="$(GenVerbosity)" />
    <Message Text="  DefaultExpansionPath: $(DefaultExpansionPath)" Importance="$(GenVerbosity)" />
    <Message Text="  FreshExpansionPath -> $(FreshExpansionPath)" Importance="$(GenVerbosity)" />
    <Message Text="  Variables:" Importance="$(GenVerbosity)" />
    <Message Text="    %(Pattern.Name) -> %(Replacement)" Condition="'%(Replacement)'!=''" Importance="$(GenVerbosity)" />
    <Message Text="    %(Pattern.Name) -> [null]" Condition="'%(Replacement)'==''" Importance="$(GenVerbosity)" />

    <!--test if expansion is stale-->
    <PropertyGroup>
      <IsExpansionStale Condition="
        '@(Pattern->'%(Replacement)', '')'!='' AND
        '$(FreshExpansionText)'!='$(ExpansionText)'
      ">true</IsExpansionStale>
      
      <SubstituteExpandedResult Condition="
        '$(IsExpansionStale)'=='true'
      ">%(Template.SubstituteExpandedResult)</SubstituteExpandedResult>
      
      <OverwriteDefaultExpansion Condition="
        '$(IsExpansionStale)'=='true' AND '$(SubstituteExpandedResult)'!='true'
      ">true</OverwriteDefaultExpansion>
    </PropertyGroup>
    <Message Text="  IsExpansionStale: $(IsExpansionStale)" Condition="'$(IsExpansionStale)'=='true'" Importance="$(GenVerbosity)" />
    <Message Text="    SubstituteExpandedResult: $(SubstituteExpandedResult)" Condition="'$(SubstituteExpandedResult)'!=''" Importance="$(GenVerbosity)" />
    <Message Text="    OverwriteDefaultExpansion: $(OverwriteDefaultExpansion)" Condition="'$(OverwriteDefaultExpansion)'!=''" Importance="$(GenVerbosity)" />

    <!--overwrite default expansion-->
    <Warning 
      Text="Expansion of template '$(TemplatePath)' is stale. Refreshing default expansion '$(DefaultExpansionPath)'."
      Condition="'$(OverwriteDefaultExpansion)'=='true'"
    />
    <WriteTextToFile
      File="$(DefaultExpansionPath)"
      Text="$(FreshExpansionText)"
      Overwrite="true"
      Condition="'$(OverwriteDefaultExpansion)'=='true'"
    />

    <!--substitute expanded result-->
    <Message
      Text="  Submsituting: $(ExpansionIdentity) -> $(FreshExpansionPath)" 
      Condition="'$(SubstituteExpandedResult)'=='true'"
      Importance="$(GenVerbosity)" 
    />
    <ItemGroup Condition="'$(SubstituteExpandedResult)'=='true'">
      <Compile Remove="$(ExpansionIdentity)"/>
      <Compile Include="$(FreshExpansionPath)"/>
    </ItemGroup>
  </Target>

</Project>